    "LICENSE"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^10.17.60",
    "typescript": "^4.4.3",
    "vows": "^0.8.3",
    "nyc": "^15.1.0",
    "typedoc": "0.22.5",
    "eslint": "^7.32.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
